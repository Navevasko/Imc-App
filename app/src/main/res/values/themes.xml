<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ImcApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryVariant">@color/secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/main</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="titulo" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize"> 48sp </item>
        <item name="android:textColor"> @color/secondary </item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_login" parent="@style/Widget.MaterialComponents.Button">
        <item name="backgroundTint"> @color/secondary </item>
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="dashboard_values" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dashboard_label" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="card_titulo" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="cadastro_titulo" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="cadastro_peso_titulo" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="info_peso" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="title_peso" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="dados_peso" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>